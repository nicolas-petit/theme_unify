<odoo>

    <template id="snippet_unify_opt" name="Snippet Unify Options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='background']" position="after">
            <div data-selector=".btn-u">
                <li class="dropdown-submenu">
                    <a href="#">Color</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="btn-u-blue"><a>Blue</a></li>
                        <li data-select_class="btn-u-red"><a>Red</a></li>
                        <li data-select_class="btn-u-orange"><a>Orange</a></li>
                        <li data-select_class="btn-u-sea"><a>Turquoise</a></li>
                        <li data-select_class="btn-u-green"><a>Green</a></li>
                        <li data-select_class="btn-u-yellow"><a>Yellow</a></li>
                        <li data-select_class="btn-u-default"><a>Grey</a></li>
                        <li data-select_class="btn-u-dark"><a>Dark</a></li>
                        <li data-select_class="btn-u-purple"><a>Purple</a></li>
                        <li data-select_class="btn-u-aqua"><a>Aqua</a></li>
                        <li data-select_class="btn-u-brown"><a>Brown</a></li>
                        <li data-select_class="btn-u-dark-blue"><a>Dark Blue</a></li>
                        <li data-select_class="btn-u-light-green"><a>Light Green</a></li>
                        <li data-select_class=""><a>Default</a></li>
                    </ul>
                </li>
                <li class="dropdown-submenu">
                    <a href="#">Size</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="btn-lg"><a>Large</a></li>
                        <li data-select_class=""><a>Regular</a></li>
                        <li data-select_class="btn-sm"><a>Small</a></li>
                        <li data-select_class="btn-xs"><a>Mini</a></li>
                    </ul>
                </li>
                <li class="dropdown-submenu">
                    <a href="#">Rounded</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="rounded"><a>Rounded</a></li>
                        <li data-select_class="rounded-2x"><a>Rounded 2x</a></li>
                        <li data-select_class="rounded-3x"><a>Rounded 3x</a></li>
                        <li data-select_class="rounded-4x"><a>Rounded 4x</a></li>
                        <li data-select_class=""><a>None</a></li>
                    </ul>
                </li>
            </div>
        </xpath>

        <xpath expr="//div[@data-js='background']" position="after">
            <div data-selector=".pricing" data-js="unify_options_pricing">
                <li class="dropdown-submenu">
                    <a href="#">Banner "Top"</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="unify_pricing_top_banner"><a>Yes</a></li>
                        <li data-select_class=""><a>No</a></li>
                    </ul>
                </li>
                <li class="dropdown-submenu">
                    <a href="#">Note</a>
                    <ul class="dropdown-menu">
                        <li data-select_class="unify_pricing_note_0"><a>0</a></li>
                        <li data-select_class="unify_pricing_note_0_5"><a>0.5</a></li>
                        <li data-select_class="unify_pricing_note_1"><a>1</a></li>
                        <li data-select_class="unify_pricing_note_1_5"><a>1.5</a></li>
                        <li data-select_class="unify_pricing_note_2"><a>2</a></li>
                        <li data-select_class="unify_pricing_note_2_5"><a>2.5</a></li>
                        <li data-select_class="unify_pricing_note_3"><a>3</a></li>
                        <li data-select_class="unify_pricing_note_3_5"><a>3.5</a></li>
                        <li data-select_class="unify_pricing_note_4"><a>4</a></li>
                        <li data-select_class="unify_pricing_note_4_5"><a>4.5</a></li>
                        <li data-select_class="unify_pricing_note_5"><a>5</a></li>
                    </ul>
                </li>
            </div>
        </xpath>
     </template>

</odoo>

